<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="backgroundColor">@android:color/transparent</item>
    </style>

    <style name="AppBackground">
        <item name="android:background">@drawable/screen_back_primary</item>
    </style>

    <style name="Buttonized" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="FullCupButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">156dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="fontFamily">@font/karla_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="FullCupEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@drawable/border_grey</item>
    </style>

    <style name="AppHeadline3" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/midnight_blue_700</item>
        <item name="fontFamily">@font/gentium_basic_regular</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="AppHeadline4" parent="AppHeadline3">
        <item name="android:textSize">34sp</item>
        <item name="android:spacing">0.25sp</item>
    </style>

    <style name="AppHeadline5" parent="AppHeadline3">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppSubtitle" parent="AppHeadline3">
        <item name="android:textSize">16sp</item>
    </style>
</resources>