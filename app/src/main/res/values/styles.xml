<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBackground">
        <item name="android:background">@drawable/screen_back_primary</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="backgroundColor">@android:color/transparent</item>
    </style>

    <style name="Buttonized" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="FullCupButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">156dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="fontFamily">@font/karla_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="FullCupEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@drawable/border_blue</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="FullCupBottomSheet" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:background">@color/ivory</item>
    </style>
</resources>