<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="backgroundColor">@android:color/transparent</item>
    </style>

    <style name="Buttonized" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="AppButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/karla_regular</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="AppHeadline3" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/midnight_blue_700</item>
        <item name="fontFamily">@font/gentium_basic_regular</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="AppHeadline5" parent="AppHeadline3">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppSubtitle" parent="AppHeadline3">
        <item name="android:textSize">16sp</item>
    </style>
</resources>