<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="backgroundColor">@android:color/transparent</item>
    </style>

    <style name="Buttonized" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="AppButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/karla_regular</item>
        <item name="cornerRadius">25dp</item>
    </style>

    <style name="AppHeadline" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/gentium_basic_regular</item>
        <item name="android:textSize">48sp</item>
    </style>
</resources>