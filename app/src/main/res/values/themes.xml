<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FullCup" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/midnight_blue_700</item>
        <item name="colorSecondaryVariant">@color/midnight_blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/ivory</item>
        <item name="fontFamily">@font/karla_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/midnight_blue_700</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="materialButtonStyle">@style/FullCupButton</item>
        <item name="bottomSheetStyle">@style/FullCupBottomSheet</item>
    </style>
</resources>